{
    "extends": "tslint:recommended",
    "rules": {
        "arrow-parens": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "max-classes-per-file": [
            false,
            1
        ],
        "max-line-length": [
            true,
            140
        ],
        "member-ordering": [
            true,
            {
                "order": "instance-sandwich"
            }
        ],
        "no-conditional-assignment": false,
        "no-console": [
            false
        ],
        "no-var-requires": false,
        "object-literal-sort-keys": false,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "ordered-imports": true,
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "arrays": "always",
                    "functions": "never",
                    "objects": "always"
                }
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    }
}